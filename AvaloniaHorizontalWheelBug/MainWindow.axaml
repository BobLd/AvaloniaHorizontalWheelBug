<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="AvaloniaHorizontalWheelBug.MainWindow"
        Title="AvaloniaHorizontalWheelBug"
		Width="200" Height="200" CanResize="False">
	<DataGrid Items="{Binding Entries}">
		<DataGrid.Columns>
			<DataGridTextColumn Header="ID" Binding="{Binding Id, Mode=OneWay}" />
			<DataGridTextColumn Header="Status" Binding="{Binding Status, Mode=OneWay}"/>
			<DataGridTextColumn Header="Symbol" Binding="{Binding Symbol, Mode=OneWay}"/>
			<DataGridTextColumn Header="Type" Binding="{Binding Type, Mode=OneWay}"/>
			<DataGridTextColumn Header="Expiry" Binding="{Binding Expiry, Mode=OneWay}"/>
		</DataGrid.Columns>
	</DataGrid>
</Window>
